<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="@dimen/activity_horizontal_margin_small"
    tools:context="com.joss.achords.Fragments.ExportEmailDialogFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:layout_marginBottom="@dimen/activity_vertical_margin_small"/>

    <EditText
        android:id="@+id/export_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="EMail to send the file"
        android:padding="@dimen/activity_horizontal_margin_small"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <include layout="@layout/dialog_buttons"/>

</LinearLayout>
