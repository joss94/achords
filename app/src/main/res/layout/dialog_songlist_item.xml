<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/file_item_background"
    android:clickable="true"
    android:longClickable="true"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/song_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:padding="@dimen/activity_horizontal_margin_small"
        >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_name"
            android:text="List"
            android:textSize="@dimen/size_songbook_song_title"
            android:textColor="@color/file_item_text_color"
            android:clickable="false"
            android:background="@null" />

    </LinearLayout>


</RelativeLayout>

